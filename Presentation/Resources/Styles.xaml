<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Presentation"
                    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf">

    <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
        <Border BorderThickness="0" CornerRadius="4"
                TextBlock.Foreground="{DynamicResource CasualTextColor}"
                Background="{DynamicResource ButtonColor}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"></ContentPresenter>
            
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Border  BorderThickness="1,0,1,0"  BorderBrush="{DynamicResource BordersButtonColor}" 
                TextBlock.Foreground="{DynamicResource CasualTextColor}"
                Background="{DynamicResource ButtonColor}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"></ContentPresenter>
        </Border>
        
    </ControlTemplate>
</ResourceDictionary>